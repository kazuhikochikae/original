<h2>キャラプロフィール編集</h2>

<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
<%= form_with model: @vr_person, url: vr_person_path(@vr_person), local: true, method: :put do |f| %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control mb-3" %>
          </div>

            <div class="form-group">
            <%= f.label :一言メッセージ %>
            <%= f.text_field :message, class: "form-control mb-3" %>
          </div>

           <div class="form-group">
            <%= f.label :紹介文 %>
             <%= f.text_area :description %>
           </div>


        
          <div class="form-group">
            <%= f.label :画像 %>
           
              <%= f.file_field :avatar, required: true %>

          </div>

        
            <%= f.submit "更新", class: "btn btn-primary" %>

      <% end %>
         <p class="link_blue"><%= link_to '戻る', :back %></p>

    </div>
  </div>
</div>
