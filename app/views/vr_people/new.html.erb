<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <%= form_with model: @vr_person, url: vr_people_path, local: true do |f| %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control mb-3" %>
          </div>

            <div class="form-group">
            <%= f.label :一言メッセージ %>
            <%= f.text_field :message, class: "form-control mb-3" %>
          </div>

           <div class="form-group">
            <%= f.label :紹介文 %>
             <%= f.text_area :description %>
           </div>


        
          <div class="form-group">
            <%= f.label :画像 %>
           
              <%= f.file_field :avatar, required: true %>

          </div>

        
          <%= f.submit  class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>